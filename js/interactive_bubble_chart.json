{
      "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
      "width": 650,
      "height": 500,
      "title": "Population vs Energy Consumption of Australian States",
      "data": {
            "url": "data/energy_consumption_state.csv",
            "format": {
                  "type": "csv"
            }
      },
      "params": [
            {
                  "name": "yearLabel",
                  "value": 2022,
                  "bind": {
                        "input": "range",
                        "min": 2010,
                        "max": 2022,
                        "step": 1,
                        "name": "Select Year: "
                  }
            }
      ],
      "transform": [
            {
                  "filter": "datum.Year == yearLabel"
            }
      ],
      "mark": "circle",
      "encoding": {
            "x": {
                  "field": "Population",
                  "type": "quantitative",
                  "axis": {
                        "title": "Population",
                        "grid": false
                  }
            },
            "y": {
                  "field": "GWh",
                  "type": "quantitative",
                  "axis": {
                        "title": "Energy Consumption (GWh)",
                        "grid": false
                  }
            },
            "size": {
                  "field": "GWh",
                  "type": "quantitative",
                  "title": "Energy Consumption (GWh)",
                  "scale": {
                        "range": [
                              100,
                              1000
                        ]
                  }
            },
            "color": {
                  "field": "State",
                  "type": "nominal",
                  "scale": {
                        "domain": [
                              "New South Wales",
                              "Victoria",
                              "Queensland",
                              "South Australia",
                              "Western Australia",
                              "Tasmania",
                              "Northern Territory"
                        ],
                        "range": [
                              "#87CEEB",
                              "#000080",
                              "#FFA500",
                              "#FF0000",
                              "#33FFF6",
                              "#006A4E",
                              "#913831"
                        ]
                  },
                  "legend": {
                        "title": "State"
                  }
            },
            "tooltip": [
                  {
                        "field": "State",
                        "type": "nominal",
                        "title": "State"
                  },
                  {
                        "field": "Population",
                        "type": "quantitative",
                        "title": "Population"
                  },
                  {
                        "field": "GWh",
                        "type": "quantitative",
                        "title": "Energy Consumption (GWh)"
                  },
                  {
                        "field": "Year",
                        "type": "ordinal",
                        "title": "Year"
                  }
            ]
      }
}