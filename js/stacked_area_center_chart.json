{
      "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
      "width": 800,
      "height": 400,
      "title": "Energy Consumption by State (2010-11 to 2022-23) with Interactive State Selection",
      "data": {
            "url": "data/energy_consumption_state.csv",
            "format": {
                  "type": "csv"
            }
      },
      "mark": "area",
      "params": [
            {
                  "name": "StateSelection",
                  "select": {
                        "type": "point",
                        "fields": [
                              "State"
                        ]
                  },
                  "bind": "legend"
            }
      ],
      "encoding": {
            "x": {
                  "field": "Year",
                  "type": "ordinal",
                  "axis": {
                        "labelAngle": -45,
                        "title": "Year"
                  }
            },
            "y": {
                  "aggregate": "sum",
                  "field": "GWh",
                  "stack": "normalize",
                  "axis": {
                        "title": "Energy Consumption (GWh)"
                  }
            },
            "color": {
                  "field": "State",
                  "scale": {
                        "scheme": "category20b"
                  }
            },
            "opacity": {
                  "condition": {
                        "param": "StateSelection",
                        "value": 1
                  },
                  "value": 0.2
            }
      }
}